      <body class="bgLogInImage">
  
       <!-- START OF CONTAINER -->
    <div class="container-fluid col-md-5 col-xl-4 colorWhite g-0">
      <div class="row text-center mb-3 mt-5 justify-content-center">
        <p class="h3">Sign In</p>
      </div>
      <!-- END OF SIGN IN TEXT -->

      <div class="row bgcolorBlue justify-content-center mb-3 rounded">
        <div class="col-12 px-5">
          <!-- FORM STARTING -->
          <form role="form" class="row g-3 mt-4" id="loginform" action="/index" method="POST">
            <div class="col-12">
    
              <label for="userName" class="form-label">Email</label>
              <input
              type="text" class="form-control" id="Name" name="userName" required
              />
              <label  style="color:red;" id="msglbl"><%=message%></lable>
            </div>
            <!-- <div class="col-12 ">
              <p class="h6 text-danger" id="msglbl" hidden=true></p>
            </div> -->
            <!-- END OF EMAIL INPUT -->

            <div class="col-12 mb-3">
              <div class="d-flex justify-content-between">
               
                

                <label for="inputPassword" class="form-label">Password</label>
                <a href="#" target="_blank" class="text-decoration-none">
                  Forgot Password?</a
                >
              </div>

              <input
              type="password" class="form-control"
                class="form-control col-12 rounded-3"
                id="inputPassword" name="password" placeholder="Min 8 character,Atleast one digit & one uppercase" required
              />
              <label id="passwordErrorlbl" style="color: red;" name="passwordErrorlbl"></label>
            </div>
            <div class="col-12 ">
              <p class="h6 text-danger" id="passwordErr" hidden = true></p>
            </div>
            <!-- END OF PASSWORD INPUT -->

            <div class="col-12 form-check mb-3">
              <input class="form-check-input" type="checkbox" id="gridCheck" />
              <label class="form-check-label" for="gridCheck">
                Remember me
              </label>
            </div>
            <!-- END OF REMEMBER ME CHECK BOX -->

            <div class="col-10 mb-4 mx-auto">
              <button
                type = "submit"
                class="btn btn-success mx-auto w-100 rounded-pill"
                
              >
                Sign in
              </button>
            </div>
            <!-- END OF SUBMIT BUTTON -->
          </form>
          <!-- END OF FORM -->
        </div>
        <!-- END OF COLUMN TEXT -->
      </div>
      <!-- END OF SIGN IN ROW -->

      <div class="row text-center mb-5 p-3 bgcolorBlue rounded">
        <p class="col-12 h6">
          New to LibraryApp?
          <a href="/signup" class="text-decoration-none ms-2 text-primary"
            >Create an account</a
          >
        </p>
      </div>
      <!-- END OF NEW ACCOUNT ROW -->

